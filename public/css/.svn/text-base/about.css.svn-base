
header{
    /*width: 100%;*/
    height: 500px;
    background: url("../images/about/banner.jpg") top;
}

.title{
    text-align: center;
    font-size: 40px;
    color: #416eb6;
    padding: 100px 0 60px 0;
}

.article-content{
    width: 900px;
    margin: 0 auto;
}
.article-content p{
    text-indent: 40px;
    font-size: 20px;
    line-height: 40px;
    text-align: justify;
}

.pics{
    height: 500px;
    margin-top: 100px;
}
.pics ul{
    width: 100%;
    height: 400px;
    overflow-x: hidden;
    position: relative;
}
.pics ul li{
    width: 600px;
    list-style: none;
    height: 400px;
    float: left;
    padding: 50px 0;
    cursor: pointer;
}

.pics ul li.left{
    float: left;
}
.pics ul li.active{
    position: absolute;
    height: 400px;
    padding: 0;
    left: 200px;
    transition: all .5s;
}
.pics ul li.right{
    float: right;
}

